<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/homenavbar.ejs') %>
            <div class="container">
                <hr>
                <div class="jumbotron">
                    <h1 class="display-4">Bem-vindo</h1>
                    <p class="lead">Fique à vontade para ler os artigos disponíveis.</p>
                    <hr class="my-4">
                    <p>Mais informações</p>
                    <a href="/login" class="btn btn-primary btn-lg" role="button">Cadastrar Artigo</a>
                </div>
                <hr>
                <% articles.forEach(article => { %>
                    <div class="card mt-2">
                        <div class="card-header">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-outline-success">Ler artigo</a>
                        </div>
                    </div>
                    <% }) %>
                        <div class="row mt-1">
                            <div class="col col-12">
                                <a style="float: right;" href="/articles/page/2">Next >>></a>
                            </div>
                            <hr>
                        </div>
            </div>
    </body>

    <%- include ('partials/footer.ejs') %>